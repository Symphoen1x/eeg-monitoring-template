# EEG Monitoring Template - Environment Variables
# Copy this file to .env and customize for your setup

# Application
APP_NAME=EEG Monitoring Backend
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database - PostgreSQL + TimescaleDB
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/eeg_monitoring
DATABASE_URL_ASYNC=postgresql+asyncpg://postgres:your_password@localhost:5432/eeg_monitoring

# Redis (optional — for token blacklist and caching)
REDIS_URL=redis://localhost:6379/0

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=change-this-to-a-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173"]

# TimescaleDB
TIMESCALE_CHUNK_INTERVAL=1 day

# WebSocket
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Firebase (for Google OAuth — optional)
# FIREBASE_SERVICE_ACCOUNT_PATH=path/to/service-account.json

# Logging
LOG_LEVEL=INFO
